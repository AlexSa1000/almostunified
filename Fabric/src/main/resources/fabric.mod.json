{
  "schemaVersion": 1,
  "id": "${modId}",
  "version": "${version}",
  "name": "${modName}",
  "description": "${modDescription}",
  "authors": [
    "${modAuthor}"
  ],
  "contact": {
    "homepage": "https://almostreliable.com/",
    "sources": "https://github.com/${githubUser}/${githubRepo}/issues"
  },
  "license": "${license}",
  "icon": "assets/${modId}/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "com.almostreliable.unified.AlmostUnifiedFabric"
    ],
    "jei_mod_plugin": [
      "com.almostreliable.unified.compat.AlmostJEI"
    ],
    "rei_client": [
      "com.almostreliable.unified.compat.AlmostREI"
    ]
  },
  "mixins": [
    "almostunified-common.mixins.json"
  ],
  "depends": {
    "fabric": "*",
    "minecraft": ">=${minecraftVersion}",
    "java": ">=17"
  }
}
